{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Roblox Monitor",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-g",
                "-I./lib",
                "src/main.cpp",
                "-lwininet",
                "-lws2_32",
                "-o",
                "build/roblox_monitor.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}